{
  "name": "near-paper",
  "version": "0.1.2",
  "description": "Creating and sweeping paper wallets on NEAR blockchain.",
  "main": "lib/index.js",
  "directories": {
    "examples": "examples",
    "lib": "lib"
  },
  "files": [
    "dist/",
    "examples/"
  ],
  "unpkg": "dist/near-paper.min.js",
  "scripts": {
    "lint": "eslint lib/",
