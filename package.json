  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zh/near-paper/issues"
  },
  "dependencies": {
    "bn": "^1.0.5",
    "bn.js": "^5.2.0",
    "near-api-js": "^0.30.0"
  },
  "devDependencies": {
    "browserify": "^17.0.0",
    "dotenv": "^9.0.2",
    "eslint": "^7.26.0",
    "eslint-plugin-prettier": "^3.4.0",
    "qrcode-terminal": "^0.12.0",
    "uglify-es": "^3.3.9",
    "yargs": "^17.0.1"
